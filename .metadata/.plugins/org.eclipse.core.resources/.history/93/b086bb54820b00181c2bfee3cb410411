object functionExamples {

def abs(x: Int)  = if(x < 0) -x else x            //> abs: (x: Int)Int

abs(-5)                                           //> res0: Int = 5


def fac(n: Int) = {
var r  = 1
for(i <- 1 to n)
r = r*i
r
}                                                 //> fac: (n: Int)Int

fac(5)                                            //> res1: Int = 120

}