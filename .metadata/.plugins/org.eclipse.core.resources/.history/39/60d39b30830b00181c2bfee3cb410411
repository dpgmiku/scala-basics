object functionExamples {

def abs(x: Int)  = if(x < 0) -x else x            //> abs: (x: Int)Int

abs(-5)                                           //> res0: Int = 5


def fac(n: Int) = {
var r  = 1
for(i <- 1 to n)
r = r*i
r
}                                                 //> fac: (n: Int)Int

fac(5)                                            //> res1: Int = 120


def fac2(n: Int):Int = if (n<=0) 1 else n * fac2(n-1)
                                                  //> fac2: (n: Int)Int

fac2(5)                                           //> res2: Int = 120

def printName(firstName: String, lastName: String) {
println(firstName + "" + lastName)
}                                                 //> printName: (firstName: String, lastName: String)Unit

printName(lastName = "Fischer", firstName= "Peggy", )
                                                  //> PeggyFischer
}